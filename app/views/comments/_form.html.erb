<%= form_for ([@post, @post.comments.build]), html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Add Comment:</legend>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :commenter, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :commenter, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :text, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :text, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit :comment, class: 'btn btn-success' %>
      </div>
    </div>
  </fieldset>
<% end %>